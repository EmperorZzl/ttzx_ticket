<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="center_horizontal"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/qq_login_iv"
            android:layout_width="@dimen/activity_login_qq_login_iv_width"
            android:layout_height="@dimen/activity_login_qq_login_iv_height"
            android:layout_margin="@dimen/margin10"
            android:contentDescription="@null"
            android:src="@drawable/qq" />

        <ImageView
            android:id="@+id/wechat_login_iv"
            android:layout_width="@dimen/activity_login_wechat_login_iv_width"
            android:layout_height="@dimen/activity_login_wechat_login_iv_height"
            android:layout_margin="@dimen/margin10"
            android:contentDescription="@null"
            android:src="@drawable/wechat" />

        <ImageView
            android:id="@+id/sina_weibo_login_iv"
            android:layout_width="@dimen/activity_login_sina_weibo_login_iv_width"
            android:layout_height="@dimen/activity_login_sina_weibo_login_iv_height"
            android:layout_margin="@dimen/margin10"
            android:contentDescription="@null"
            android:src="@drawable/sina_weibo" />
    </LinearLayout>

</RelativeLayout>